<%- include("../../views/partials/user/header") %>
  <div class="otp-wrapper">
    <link rel="stylesheet" href="/css/change-email.css">
    <div class="otp-container">
      <h3>Email Verification</h3>
      <form action="/verify-email-otp" method="post">
        <div class="form-group">
          <label for="otp">Enter OTP:</label>
          <input type="text" id="otp" name="otp" class="otp-input" required>
        </div>
        <button type="submit" class="btn btn-primary">Verify OTP</button>
        <div class="otp-timer">
          <span id="otpTimer">OTP Expires in: 1:00</span>
        </div>
        <span onclick="resendOTP()" class="resend-btn">Resend OTP</span>
        <% if (locals.message && message.length> 0) { %>
          <div class="alert alert-danger mt-3">
            <%= message %>
          </div>
          <% } %>
      </form>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
  <script src="/js/change-email-otp.js"></script>

  <!-- Footer -->
  <div class="footer">
    <%- include("../../views/partials/user/footer") %>
  </div>